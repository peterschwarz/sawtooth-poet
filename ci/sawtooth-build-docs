# Description:
#   Builds the environment needed to build the Sawtooth PoET docs
#   Running the image will put the Sawtooth PoET docs in
#   sawtooth-poet/docs/build on your local machine.
#
# Build:
#   $ cd sawtooth-poet
#   $ docker build . -f ci/sawtooth-build-docs -t sawtooth-build-docs
#
# Run:
#   $ cd sawtooth-poet
#   $ docker run -v $(pwd):/project/sawtooth-poet sawtooth-build-docs

FROM ubuntu:bionic

RUN apt-get update \
 && apt-get install gnupg -y

RUN echo "deb [arch=amd64] http://repo.sawtooth.me/ubuntu/nightly bionic
 universe" >> /etc/apt/sources.list \
 && (apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys 44FC67F19B2466EA \
 || apt-key adv --keyserver hkp://p80.pool.sks-keyservers.net:80 --recv-keys 44FC67F19B2466EA) \
 && apt-get update \
 && apt-get install -y -q --allow-downgrades \
    build-essential \
    git \
    libffi-dev \
    libssl-dev \
    libzmq3-dev \
    pep8 \
    pkg-config \
    python3-cbor \
    python3-dev \
    python3-lmdb \
    python3-pip \
    python3-setuptools-scm \
    python3-six \
    python3-sawtooth-sdk \
    python3-sawtooth-signing \
    unzip \
 && apt-get clean \
 && rm -rf /var/lib/apt/lists/* \
 && pip3 install \
    pylint \
    bandit

RUN apt-get update && apt-get install -y -q \
    curl \
    dvipng \
    make \
    sudo \
    texlive-fonts-recommended \
    texlive-latex-base \
    texlive-latex-extra \
    texlive-latex-recommended \
    zip \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* \
    && pip3 install \
    sphinx==1.5.6 \
    sphinxcontrib-httpdomain \
    sphinxcontrib-openapi \
    sphinx_rtd_theme

WORKDIR /project/sawtooth-poet/docs
CMD make html latexpdf
